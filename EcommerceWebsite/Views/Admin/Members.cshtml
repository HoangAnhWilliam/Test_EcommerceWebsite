@model List<EcommerceWebsite.DAL.Tbl_Members>
@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var Item = TempData["MemberData"];
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Members</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="../Admin/dashBoard">Dashboard</a></li>
        <li class="breadcrumb-item active">Members</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the
            <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>
            .
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Members
            <div class="d-flex justify-content-end">
                <a href="../Admin/MemberAdd" class="btn btn-primary">Add New</a>
            </div>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr.No</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(Model.IndexOf(item)+1)</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.EmailId, @Item</td>
                            <td>@item.Password</td>
                            <td>
                                @Html.ActionLink("Edit Member", "MemberEdit", new { memId = item.MemberId }, new { @class = "btn btn-success" })
                                                        @Html.ActionLink("Delete Member", "MemberDelete", new { memId = item.MemberId }, new { @class = "btn btn-danger" })
                                                    </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>