    <style>
        .grid-container {
            display: grid;
            grid-template-columns: 2fr 1fr; /* Chia màn hình thành 2 cột, cột trái chiếm 1/3, cột phải chiếm 2/3 */
            gap: 20px; /* Khoảng cách giữa cột */
        }

        .instructor-info {
            padding: 20px;
            background-color: #F4BF96;
            border-radius: 10px;
        }

        .video-container {
            position: relative;
            padding-bottom: 56.25%; /* Tỉ lệ phù hợp với video YouTube */
            padding-top: 25px;
            height: 0;
        }

            .video-container iframe {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }

        .instructor-image {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .instructor-image img {
                border-radius: 50%; /* Để làm hình tròn */
                max-width: 150px; /* Kích thước ảnh giảng viên */
            }

        .social-links {
            margin-top: 20px;
            text-align: center;
        }

            .social-links span {
                display: inline-block;
                margin-right: 10px; /* Để tạo khoảng cách giữa các mục */
            }

        .course-list {
            grid-column: 1 / span 2; /* Mở rộng danh sách khóa học trên cả hai cột */
        }

        .lesson {
            background-color: #f0f0f0;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            cursor: pointer;
        }

        .lesson-video {
            display: none;
        }

        .lesson.active .lesson-video {
            display: block;
        }

        .lesson-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
