@using EcommerceWebsite.Models.Home
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <title>Thanh Toán</title>
    <meta charset="utf-8">
    <link href="~/Content/Payment.css" rel="stylesheet" />
</head>
<style>
