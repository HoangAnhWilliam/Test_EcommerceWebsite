        </div>

        <div class="customer-right">
            <p class="title red font-600 text-15"> HÌNH THỨC THANH TOÁN </p>


            <div class="payment" style="margin-bottom: 60px;">



                <label class="label-container">
                    <input type="radio" id="pay_method_1" name="pay_method" value="1" checked="">
                    <span class="checkmark"></span>
                    <span>Ví điện tử</span>
                </label>
                <label class="label-container">
                    <input type="radio" id="pay_method_2" name="pay_method" value="2" onclick="showBankAccountInput()">
                    <span class="checkmark"></span>
                    <span>Thanh toán bằng tài khoản</span>
                </label>
                <div class="payment-detail" id="bank_account_input" style="display: none;">
                    <input type="text" id="bank_account_number" placeholder="Số tài khoản (11 số)">

                </div>
                <div class="payment-detail" id="bank_account_input" style="display: none;">
                    <input type="text" id="bank_account_number" name="user_info[bank_account]" placeholder="Số tài khoản (11 số)">
                </div>
                <img src="~/Images/qr.png" id="qr_code_image" alt="QR Code" , width="190px" height="190px">


            </div>


            <div class="text-right text-13 cart-total-price-group">
                @{
                    int Total = 0;
                }
                @foreach (Item item in (List<Item>)Session["cart"])
                {
                    int lineTotal = Convert.ToInt32(item.quantity * item.product.Price);
                    Total = Convert.ToInt32(@Total + lineTotal);
                }
                Tổng tiền(@Total)
                    <b class="red text-22 font-600">
                        <span class="js-total-cart-price"></span>
                    </b>
                </div>



            <div class="clearfix cart-button-buy">
                <button type="submit" class="w-100 js-send-cart font-weight-bold text-18" onclick="showPaymentSuccess()"> ĐẶT MUA NGAY </button>

            </div>

            <input type="hidden" name="send_order" value="yes">
            <input type="hidden" id="js-total-before-fee-discount" value="35000">

            <input type="hidden" id="js-discount-voucher" value="0">
            <input type="hidden" name="coupon_code" value="" id="js_coupon_code">
            <input type="hidden" id="js-discount-membership" value="0">
            <input type="hidden" name="shipping_fee" id="js-fee-shipping" value="0">
            <input type="hidden" name="cod_fee" id="js-fee-cod" value="0">
            <div id="successMessage" style="display: none;">

            </div>
        </div>
        <div id="successMessage" style="display: none;">
            Thanh toán thành công!
        </div>
    </div>
    <script src="~/Scripts/Payment.js"></script>
    <script>
        function showQRCode() {
            var qrCodeImage = document.getElementById("qr_code_image");
            qrCodeImage.style.display = "block";
        }

        function hideQRCode() {
            var qrCodeImage = document.getElementById("qr_code_image");
            qrCodeImage.style.display = "none";
        }
        function showBankAccountInput() {
            var bankAccountInput = document.getElementById("bank_account_input");
            var radioPayMethod2 = document.getElementById("pay_method_2");

            if (radioPayMethod2.checked) {
                bankAccountInput.style.display = "block";
            } else {
                bankAccountInput.style.display = "none";
            }
        }

        function validateBankAccount() {
            var bankAccountNumber = document.getElementById("bank_account_number").value;

            if (bankAccountNumber.length !== 11) {
                alert("Số tài khoản phải có đúng 11 số");
                return false;
            }


            return true;
        }


        document.getElementById("bank_account_number").onchange = function () {
            validateBankAccount();
        };

        function showPaymentSuccess() {
            var isValid = validateForm();

            if (isValid) {
                var successMessage = document.getElementById("successMessage");
                successMessage.style.display = "block";
            }
        }

        function validateForm() {

            alert("Đăng ký thành công!");
            return true;

        }

    </script>
</body>
</html>